datasource db {
  provider = "postgresql"
  url = "***"
}

generator photon {
  provider = "prisma-client-js"
}

model ActiveEntry {
  id String @default(cuid()) @id
  author String @unique
  start DateTime @default(now())
  description String
  sector Sector
  project Project
}

model Entry {
  id String @default(cuid()) @id
  author String
  start DateTime
  end DateTime
  description String
  sector Sector
  project Project
}

model Sector {
  id String @default(cuid()) @id
  author String
  name String
  @@unique([author, name])
}

model Project {
  id String @default(cuid()) @id
  author String
  name String
  @@unique([author, name])
}